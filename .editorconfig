# EditorConfig file for TypeScript project with pnpm and Docker

# Apply settings to all files
[root]
indent_style = space
indent_size = 2
line_ending = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScript and JavaScript files
[*.ts]
indent_style = space
indent_size = 2
line_ending = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2
line_ending = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# YAML files (common in Docker and configs)
[*.yaml]
indent_style = space
indent_size = 2
line_ending = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JSON files
[*.json]
indent_style = space
indent_size = 2
line_ending = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 2
line_ending = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Package files
[package.json]
indent_style = space
indent_size = 2
line_ending = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown and text files
[*.md]
indent_style = space
indent_size = 2
line_ending = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[tsconfig.json]
indent_style = space
indent_size = 2
line_ending = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
